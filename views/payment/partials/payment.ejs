<h1>Checkout</h1>
    
    <div class="checkout-container">
        <section class="items-section">
            <h2>Your Items</h2>
            
            <div class="item">
                <img src="https://via.placeholder.com/100" alt="Product" class="item-image">
                <div class="item-details">
                    <h3>Sample Product 1</h3>
                    <p>Color: Black | Size: Medium</p>
                    <p>Quantity: 1</p>
                </div>
                <div class="item-price">₱1,200.00</div>
            </div>
            
            <div class="item">
                <img src="https://via.placeholder.com/100" alt="Product" class="item-image">
                <div class="item-details">
                    <h3>Sample Product 2</h3>
                    <p>Color: Blue | Size: Large</p>
                    <p>Quantity: 2</p>
                </div>
                <div class="item-price">₱2,500.00</div>
            </div>
            
            <div class="total">
                <p>Subtotal: ₱3,700.00</p>
                <p>Shipping: ₱100.00</p>
                <p>Total: ₱3,800.00</p>
            </div>
        </section>
        
        <section class="payment-section">
            <h2>Payment Method</h2>
            
            <div class="card-icons">
                <img src="https://logo.clearbit.com/visa.com" alt="Visa" class="card-icon">
                <img src="https://logo.clearbit.com/mastercard.com" alt="Mastercard" class="card-icon">
                <img src="https://logo.clearbit.com/americanexpress.com" alt="Amex" class="card-icon">
            </div>
            
            <form id="payment-form">
                <div class="form-group">
                    <label for="card-number">Card Number</label>
                    <input type="text" id="card-number" placeholder="1234 5678 9012 3456" maxlength="19">
                </div>
                
                <div class="form-group">
                    <label for="card-name">Name on Card</label>
                    <input type="text" id="card-name" placeholder="Juan Dela Cruz">
                </div>
                
                <div class="row">
                    <div class="form-group">
                        <label for="expiry-date">Expiry Date</label>
                        <input type="text" id="expiry-date" placeholder="MM/YY" maxlength="5">
                    </div>
                    
                    <div class="form-group">
                        <label for="cvv">CVV</label>
                        <input type="text" id="cvv" placeholder="123" maxlength="3">
                    </div>
                </div>
                
                <button type="submit" class="checkout-btn">Complete Purchase</button>
            </form>
        </section>
    </div>